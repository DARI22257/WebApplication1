<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaApplication2.ViewModels"
        x:Class="AvaloniaApplication2.Views.ShiftEditorWindow"
        x:DataType="vm:ShiftEditorViewModel"
        Width="520" Height="420"
        Title="Смена">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Сотрудник:"/>
        <ComboBox ItemsSource="{Binding Employees}"
                  SelectedItem="{Binding SelectedEmployee}"
                  Width="400">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding LastName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="EmployeeId (если нужно вручную):"/>
        <TextBox Text="{Binding Shift.EmployeeId}"/>

        <TextBlock Text="Начало:"/>
        <DatePicker SelectedDate="{Binding Shift.StartDateTime}"/>

        <TextBlock Text="Конец:"/>
        <DatePicker SelectedDate="{Binding Shift.EndDateTime}"/>

        <TextBox Watermark="Описание" Text="{Binding Shift.Description}" AcceptsReturn="True" Height="80"/>

        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
