<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AvaloniaApplication2.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.Views.EmployeesView"
        Title="EmployeesView"
        x:DataType="viewModels:EmployeesViewModel">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="8">
            <Button Content="Добавить" Command="{Binding AddEmployeeCommand}" />
            <Button Content="Редактировать" Command="{Binding EditEmployeeCommand}" />
            <Button Content="Удалить" Command="{Binding DeleteEmployeeCommand}" />
        </StackPanel>

        <DataGrid ItemsSource="{Binding Employees}"
                  SelectedItem="{Binding SelectedEmployee}"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="*"/>
                <DataGridTextColumn Header="Дата найма" Binding="{Binding HireDate}" Width="180"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
        
</Window>
