<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AvaloniaApplication2.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.Views.LoginWindow"
        Title="LoginWindow"
        x:DataType="viewModels:LoginViewModel">
        
        <StackPanel Margin="20" Spacing="10">
                <TextBlock Text="Вход в систему" FontSize="18" HorizontalAlignment="Center"/>

                <TextBox Watermark="Логин" Text="{Binding Username}" />
                <TextBox Watermark="Пароль" Text="{Binding Password}" PasswordChar="*"/>

                <CheckBox Content="Запомнить меня" IsChecked="{Binding RememberMe}"/>

                <Button Content="Войти" Command="{Binding LoginCommand}" />

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
        </StackPanel>
    
</Window>